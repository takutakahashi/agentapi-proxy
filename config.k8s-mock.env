# Environment variables for Kubernetes mode with mock agent
# Source this file: source config.k8s-mock.env

# Core settings
export AGENTAPI_MODE="kubernetes"
export AGENTAPI_START_PORT="9000"
export AGENTAPI_NETWORK_PORT="8080"
export AGENTAPI_NETWORK_BIND_ADDRESS="0.0.0.0"

# Kubernetes configuration
export AGENTAPI_KUBERNETES_NAMESPACE="agentapi-proxy"
export AGENTAPI_KUBERNETES_SERVICE_NAME="agentapi-proxy"
export AGENTAPI_KUBERNETES_SESSION_STORAGE_TYPE="configmap"
export AGENTAPI_KUBERNETES_SESSION_CONFIGMAP_PREFIX="agentapi-session-"
export AGENTAPI_KUBERNETES_SESSION_TTL_SECONDS="3600"
export AGENTAPI_KUBERNETES_SESSION_MAX_SESSIONS="100"

# Agent pod configuration
export AGENTAPI_KUBERNETES_AGENT_POD_IMAGE="agentapi/mock-agent:latest"
export AGENTAPI_KUBERNETES_AGENT_POD_IMAGE_PULL_POLICY="IfNotPresent"
export AGENTAPI_KUBERNETES_AGENT_POD_RESOURCES_REQUESTS_MEMORY="256Mi"
export AGENTAPI_KUBERNETES_AGENT_POD_RESOURCES_REQUESTS_CPU="100m"
export AGENTAPI_KUBERNETES_AGENT_POD_RESOURCES_LIMITS_MEMORY="512Mi"
export AGENTAPI_KUBERNETES_AGENT_POD_RESOURCES_LIMITS_CPU="500m"

# Mock agent provider
export AGENTAPI_AGENT_PROVIDER="mock"
export AGENTAPI_AGENT_MOCK_ENABLED="true"
export AGENTAPI_AGENT_MOCK_RESPONSE_DELAY_MS="100"
export AGENTAPI_AGENT_MOCK_DEFAULT_RESPONSE="Mock agent received your message"

# Session persistence
export AGENTAPI_PERSISTENCE_ENABLED="true"
export AGENTAPI_PERSISTENCE_BACKEND="kubernetes"
export AGENTAPI_PERSISTENCE_SYNC_INTERVAL_SECONDS="30"
export AGENTAPI_PERSISTENCE_ENCRYPT_SENSITIVE_DATA="true"
export AGENTAPI_PERSISTENCE_SESSION_RECOVERY_MAX_AGE_HOURS="24"

# Health checks
export AGENTAPI_HEALTH_ENABLED="true"
export AGENTAPI_HEALTH_PORT="8081"
export AGENTAPI_HEALTH_LIVENESS_PROBE_PATH="/healthz"
export AGENTAPI_HEALTH_READINESS_PROBE_PATH="/ready"

# Metrics
export AGENTAPI_METRICS_ENABLED="true"
export AGENTAPI_METRICS_PORT="9090"
export AGENTAPI_METRICS_PATH="/metrics"

# Logging
export AGENTAPI_LOGGING_LEVEL="info"
export AGENTAPI_LOGGING_FORMAT="json"
export AGENTAPI_LOGGING_OUTPUT="stdout"

# CORS
export AGENTAPI_NETWORK_CORS_ENABLED="true"
export AGENTAPI_NETWORK_CORS_ALLOWED_ORIGINS="*"

# Rate limiting
export AGENTAPI_RATE_LIMITING_ENABLED="true"
export AGENTAPI_RATE_LIMITING_REQUESTS_PER_MINUTE="60"
export AGENTAPI_RATE_LIMITING_BURST_SIZE="10"

# Notifications
export AGENTAPI_NOTIFICATIONS_ENABLED="true"
export AGENTAPI_NOTIFICATIONS_MOUNT_PATH="/home/agentapi/.notifications"
export AGENTAPI_NOTIFICATIONS_CONFIG_MAP="agentapi-notifications-config"

# Authentication (disabled for mock testing)
export AGENTAPI_AUTH_ENABLED="false"